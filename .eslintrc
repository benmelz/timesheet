{
  "root": true,
  "env": {
    "browser": true,
    "vitest-globals/env": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:vitest-globals/recommended"
  ],
  "plugins": [
    "react-refresh",
    "vitest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "coverage/",
    "dist/",
    "node_modules/"
  ],
  "rules": {
    "max-len": ["error", { "code": 120 }]
  }
}
